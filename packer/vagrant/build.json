{
  "builders": [
    {
      "type": "vmware-iso",
      "ssh_username": "{{ user `ssh_username` }}",
      "ssh_password": "{{ user `ssh_password` }}",
      "vm_name": "{{ user `vm_name` }}",
      "cpus": "{{ user `hw_cpus` }}",
      "cores": "{{ user `hw_cores` }}",
      "memory": "{{ user `hw_ram` }}",
      "disk_size": "{{ user `hw_disk_size` }}",
      "disk_additional_size": ["{{ user `hw_disk_addt_size` }}"],
      "network": "nat",
      "guest_os_type": "{{ user `hw_os` }}",
      "iso_urls": [
        "{{ user `iso_url` }}"
      ],
      "iso_checksum": "{{ user `iso_checksum` }}",
      "floppy_files": "{{ user `boot_floppy` }}",
      "boot_command": "{{ user `boot_command` }}",
      "shutdown_command": "sudo shutdown now"
    }
  ],
  "provisioners": [
    {
      "type": "ansible",
      "playbook_file": "{{ user `playbook` }}",
      "host_alias": "{{ user `host_alias` }}",
      "user": "{{ user `ssh_username` }}",
      "use_proxy": "false",
      "extra_arguments": [
        "--extra-vars", "ansible_sudo_pass={{ user `ssh_password` }} ansible_ssh_pass={{ user `ssh_password` }}"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant"
    }
  ]
}